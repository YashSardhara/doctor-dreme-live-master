{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    padding-right: {{ section.settings.padding_left | times: 0.75 | round: 0 }}px;
    padding-left: {{ section.settings.padding_right | times: 0.75 | round: 0 }}px;
    background: url('{{ section.settings.bg_img_desk | img_url: '' }}') no-repeat center;
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_left }}px;
      padding-right: {{ section.settings.padding_right }}px;
      background: url('{{ section.settings.bg_img_mob | img_url: '' }}') no-repeat center;
      background-size: cover;
    }
  }
{%- endstyle -%}

<style>
  .main_head {
    display: flex;

  }

  .ice_head {
    width: 50%;
    text-align: center;

  }

  .ice_head1 {
    width: 50%;
    text-align: center;

  }

  h1.regular_foam {
    font-size: 36px;
    color: var(--bg_color2);
    font-weight: 600;
    text-transform: uppercase;
    padding: 60px 0 0;
  }

  .description {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
    padding: 20px 70px;
  }

  span#description1 {
    font-size: 20px;
    width: 31%;
    text-align: center;
  }
  img.icon_foam {
    width: 100px;
    height: 100px;
    border: 2px dashed #5b85b9;
    border-radius: 50px;
    padding: 6px;
  }

