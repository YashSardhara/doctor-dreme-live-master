    /* .main_head{
            display: flex;
            flex-direction: row;
            justify-content: space-around;

            align-items: unset;
        } */

    .icon_foam {
      display: none;
    }

    .ice_head {
      padding: 0 0 0 15px;
    }
    .ice_head1 {
      padding: 0 0 0 32px;

    }



    h1.regular_foam {
      font-size: 20px;
      padding: 0;
      text-align: left;
    }

    .description {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      padding: 20px 0;
      align-items: unset;
      border-bottom: dashed 1px;
      margin: 0 20px;

    }

    span#description1 {
      font-size: 14px;
      text-align: left;
      line-height: 18px;
      width: 40%;
      padding: 0;

    }

  }
</style>
