<div class="text_overlay_image">
    <div class="banner_text">
        {%- if section.settings.banner_logo != blank -%}
        <a href="{{ section.settings.url }}">
            <img class="banner_logo" src="{{ section.settings.banner_logo | img_url: ' ' }}">
        </a>
        {% endif %}
        <h1 class="banner_head">{{section.settings.about_us_heading}}</h1>
        <div class="banner_description">{{section.settings.about_us_text_area}}</div>
        <p class="banner_button"><a class="btn_btm" href="{{ block.settings.url }}">{{section.settings.button-text}}</a>
        </p>
    </div>
    <div class="banner_images">
        <a href="{{ section.settings.url }}">
            <img class="desk_bg_img" src="{{ section.settings.about_us_desk_image | img_url: ' ' }}">
            <img class="mob_bg_img" src="{{ section.settings.about_us_mob_image | img_url: ' ' }}">
        </a>
    </div>
</div>

{% schema %}
{
"name": "banner_text_overlay",

"settings": [
{
"type": "image_picker",
"id": "banner_logo",
"label": "image"
},
{
"type": "text",
"id": "about_us_heading",
"default": "Type heading here",
"label": "Heading"
},
{
"type": "richtext",
"id": "about_us_text_area",
"label": "paragraph"
},
{
"type": "image_picker",
"id": "about_us_desk_image",
"label": "Desktop_Image"
},
{
"type": "image_picker",
"id": "about_us_mob_image",
"label": "Mobile_Image"
},
{
"type": "url",
"id": "url",
"label": "URL"
},
{
"id": "overlap",
"label": "Overlap text",
"type": "checkbox",
"default": false,
"info": "Not applicable for centered or bottom left text"
},
{
"type": "text",
"id": "button-text",
"label": "Button text",
"default": "button"
},
{
"type": "url",
"id": "button-url",
"label": "Button URL"
}
],
"presets" : [
{
"name": "banner_text_overlay",
"settings": {}
}
]
}
{% endschema %}

