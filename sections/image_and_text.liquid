    width: 100%;
    height: 100%;
  }
  .mob_img1 {
    display: none;
  }
  .head {
    font-size: 40px;
    margin-bottom: 20px;
    color: #1d4782;
    font-weight: 500;
    font-family: var(--heading_new_f);
    text-transform: uppercase;
  }
  @media only screen and (max-width:800px) {
