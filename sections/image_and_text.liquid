<div class="image_and_text_container">
  <div class="image_container">
    <a href="{{ block.settings.url }}">
      <img class="desk_img1" src="{{ section.settings.about_us_desk_image | img_url: ' ' }}">
      <img class="mob_img1" src="{{ section.settings.about_us_mob_image | img_url: ' ' }}">
    </a>
  </div>
  <div class="text_container">
    <h1 class="head">{{section.settings.about_us_heading}}
    </h1>
    <p class="container_sub_heading">{{section.settings.sub_heading}}
    </p>
    <div class="text_container_description">{{section.settings.description}}
    </div>
  </div>
</div>

