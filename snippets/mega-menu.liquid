<div class="row">
    {% if block_style == "style_1" %}
  <div class="col-12 col-xl-1">
    </div>
    <div class="col-12 {% if banner_first_style != blank or featured_product != blank %}{% if banner_first_style == blank or featured_product == blank %}col-xl-5{% else %}col-xl-7{% endif %}{% else %}col-xl-12{% endif %}">
        <div class="row" data-masonry='{ "itemSelector": "[data-gridItem]", "columnWidth": ".grid-sizer" }' class="style-1-menu">
            <div class="grid-sizer"></div>

            {% for l in linklists[link_child].links %}
            <div data-gridItem class="menu-lv-2 inner{% if linklists[link_child] != empty %} dropdown{% endif %} col-12 {% if banner_first_style != blank or featured_product != blank %}col-xl-12{% else %}col12{% endif %}">
                <!-- Menu level 2 -->
                <a {%if linklists[link_child] != empty %}class="menu__moblie submenu"{% endif %} href="{{ l.url }}" class="current">
                    {% render 'multilang' with l.title %}

                    {% if linklists[l.handle] != empty %}
                    <span class="icon-dropdown" data-toggle-menu-mb>
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                    </span>
                    {% endif %}
                </a>
               <span class="custom_text_head"></span>

                {% if linklists[l.handle] != empty %}
                <div class="sub-menu-mobile menu-mb-translate">
                    <div class="menu-mb-title">
                        <span class="icon-dropdown">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        </span>
                        {% render 'multilang' with l.title %}
                    </div>

                    <ul class="site-nav-dropdown">
                        {% for child_l in linklists[l.handle].links %}
                        <!-- Menu level 3 -->
                        <li class="menu-lv-3">
                            <a href="{{ child_l.url }}" {% if child_l.active %}class="current"{% endif %}>
                                {% render 'multilang' with child_l.title %}
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>

    {% if banner_first_style != blank or featured_product != blank %}
    <div class="col-12 {% if banner_first_style == blank or featured_product == blank %}col-xl-5{% else%}col-xl-5{% endif %}">
        <div class="mega-banner">
            {% if featured_product != blank %}
            <div class="Discount code{% if banner_first_style != blank %} col-left{% endif %}">
                {% if title_featured_product != blank %}
                <h3 class="title">
                    {% render 'multilang' with title_featured_product %}
                </h3>
                {% endif %}

                {% if product.available %}
                {% render 'mega-menu-product-grid' with product as product %}
                {% endif %}
            </div>
            {% endif %}

            {% if banner_first_style != blank %}
            <div class="Discount code {% if featured_product != blank %}col-right{% else %}no-feature-product{% endif %}">
                <a class="animate-scale" href="{{ link_banner_first_style }}" title="">
                    <img class="lazyload" data-src="{{ banner_first_style | img_url : '472x' }}" alt="" id="menu_image"/>
                 <h5 id="custom_text"></h5>
                </a>
               
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}


