                        </a>
                    </div>
                    {% endif %}

                    {% if banner_third_style != blank %}
                    <div class="Discount code">
                        <a class="animate-scale" href="{{ link_banner_third_style }}" title="">
                            <img data-srcset="{{ banner_third_style | img_url : '210x' }}" alt="" {% render 'lazyload' %} />
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}

             {% if display_cms_custom %}
            <div class="col-12 {% if banner_second_style != blank or banner_third_style != blank %}col-xl-6 col-cms{% else %}col-xl-12{% endif %}">
                <div class="mega-cms-block">
                    {% if cms_custom_title != blank %}
                    <h3 class="title">
                        {% render 'multilang' with cms_custom_title %}
                    </h3>
                    {% endif %}

                    {% if quote != blank %}
                        {% if settings.enable_multilang and quote contains '|' %}
                        <div class="rte-setting lang1">
                            {{ quote | split: '|' | first }}
                        </div>
                        <div class="rte-setting lang2">
                            {{ quote | split: '|' | last }}
                        </div>
                        {% else %}
                        <div class="rte-setting">
                            {{ quote | split: '|' | first }}
                        </div>
