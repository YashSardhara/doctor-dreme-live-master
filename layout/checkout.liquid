<body>
  {{ skip_to_content_link }}

  <header class="banner" data-header role="banner">
    <div class="wrap">
      {{ content_for_logo }}
    </div>
  </header>

  {{ order_summary_toggle }}
  <div class="content" data-content>
    <div class="wrap">
      <div class="main">
        <br />
        <header class="main__header" role="banner">
          {{ content_for_logo }}
          {{ breadcrumb }}
          {{ alternative_payment_methods }}

        </header>

        <main class="main__content" role="main">
          {{ content_for_layout }}
        </main>
        <footer class="main__footer" role="contentinfo">
          {{ content_for_footer }}
        </footer>
      </div>


      <aside class="sidebar" role="complementary">

        <div class="sidebar__header">
          {{ content_for_logo }}
        </div>
        <div class="sidebar__content">

          {{ content_for_order_summary }}

        </div>
        <div class="communications">
          {% comment %}
          <img src="https://cdn.shopify.com/s/files/1/0248/7766/2271/files/checkout_page-01.jpg?v=1662539382">
          {% endcomment %}
        </div>

        <div class="communications">
          {% comment %}
          <p id="to-copy">Use Code <span style="font-weight:700;">PD20</span> to Get Happy Sleep sale! Price
            <button id="applyBtn" onclick="copyToClipboard('#p1')" class="copyfrom">Apply</button>
          </p>
          {% endcomment %}
          <p>Monsoon sale! Price is Including of 20% off</p>
        </div>

        <!--        <div class="communications">
          <p><b>Sleep Festive sale price is inclusive of 15% Discount with code SF15</b></p>
          </div> -->

      </aside>
    </div>
  </div>
  {{ tracking_code }}

  <style>
    :root {
      --bg_color2: #023e88;
      --border_rad: 30px;
      --heading_new_f: congenial-light, sans-serif !important;
    }

    .content {
      background: url('https://cdn.shopify.com/s/files/1/0248/7766/2271/files/Background_image.jpg?v=1659419341');
      background-repeat: no-repeat;
      background-size: cover;
    }

    .communications {
      margin-top: 0px;
    }

    .offer-msg {
      position: relative;
      padding: 20px;
      border-radius: 10px;
      font-weight: 500;
      background: #fff;
      border: 2px solid #28b8c7;
      text-align: center;
      margin-bottom: 15px;
    }

    .offer-detail {
      margin-top: 5px;
    }

    p#to-copy {
      font-size: 13px;
    }

    small#p1 {
      display: none;
    }

    .copyfrom {
      width: 20px;
      margin-left: 10px;
    }

    .copyfrom {
      width: 90px !important;
      margin-left: 10px;
      background-color: #083f88;
      padding: 10px 5px;
      border-radius: 5px;
      color: #fff;
      font-size: 14px;
    }

    /* .order-summary__section--total-lines{
  border-top: 1px solid transparent;
    background: var(--bg_color2);
    padding: 16px;
    margin-top: 10px;
    border-radius: 5px;
} */
    /* .order-summary__section .sidebar .order-summary__emphasis,
  .total-line-table td,
  .total-line-table tr span {
    color: #fff !important
  } */
    .total-line th,
    .total-line td {
      padding-top: 1em;
    }

    .product-thumbnail__quantity,
    .anyflexbox .field__input-btn,
    #continue_button {
      background: var(--bg_color2) !important;
    }

    .anyflexbox .field__input-btn,
    #continue_button,
    #continue_to_shipping_button_custom {
      padding: 0 20px !important;
      line-height: 2.5rem;
    }

    .section__title {
      /* font-family: var(--heading_new_f); */
      font-weight: 500 !important;
      color: var(--bg_color2) !important;
    }

    .layout-flex--loose-horizontal .layout-flex__item,
    .order-summary__section--total-lines table.total-line-table tfoot.total-line-table__footer tr th,
    .section.section--shipping-address .section__title,
    .fieldset .ticket-heading {
      /* font-family: var(--heading_new_f) !important; */
      font-weight: 500 !important;
    }

    .btn__content {
      font-weight: 400 !important;
    }

    #checkout_reduction_code,
    .anyflexbox .field__input-btn,
    #continue_button,
    #continue_to_shipping_button_custom {
      border-radius: var(--border_rad);
    }

    .anyflexbox .step__footer__previous-link,
    .anyflexbox .step__footer__info,
    .anyflexbox .step__footer__previous-link .previous-link__icon,
    .main h2,
    .main .heading-2,
    .main__footer .policy-list .policy-list__item a,
    .multi-redeem,
    .product__description .order-summary__emphasis {
      color: var(--bg_color2) !important;
    }



    @media(max-width: 767px) {
      .communications {
        clear: both;
        top: 0%;
        visibility: visible;

      }

      p#to-copy {
        font-size: 10px;
      }

      .copyfrom {
        width: auto !important;
        margin: 5px 10px;
        background-color: #083f88;
        padding: 7px 10px;
        border-radius: 5px;
        color: #fff;
        font-size: 14px;
      }
    }

  </style>
  <!-- Event snippet for Google Shopping App Begin Checkout conversion page -->

  <script>
    var checkoutSubmit = document.getElementById('checkout_submit');
    var applyBtn = document.getElementById('applyBtn');

    applyBtn.onclick = function () {
      document.getElementById('checkout_reduction_code').value = 'PD20';
      checkoutSubmit.disabled = false;
      checkoutSubmit.classList.remove("btn--disabled");
      checkoutSubmit.click(); // this will trigger the click event
    };
  </script>
