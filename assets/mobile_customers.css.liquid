@media screen and (max-width:767px) {

  /* start log in css */
  .login_full .customer--wrapper {
    background: transparent !important;
    margin: 0 auto;
    width: 100%;
  }

  .login_wrap_new {
    width: 100%;
    padding: 0 10px;
  }

  div#customer-login {
    max-width: 100%;
  }

  form#customer_login {
    padding: 0 5px;
  }

  div#customer-login h1 {
    text-align: left;
    font-size: 25px !important;
  }
  #shopify-section-template--15684597448880__main nav.breadcrumbs.account_Page.customers_breadcrumb , #shopify-section-template--15684597514416__main nav.breadcrumbs.account_Page.customers_breadcrumb {
    display: block;
    padding: 0px 10px 20px !important;
    background-color: transparent;
}
  input#customer_email,
  input#customer_password {
    height: 45px;
    border: 1px solid #cecece;
    border-radius: 5px;
    margin-bottom: 10px;
  }

  input#customer_email::placeholder {
    font-size: 18px;
    color: #252525;
  }

  input {
    margin: 0 0 5px;
  }

  .frm_sec2 label {
    font-size: 18px;
    font-family:'League Spartan' ;
  }

  span.account--forgot-password a {
    /* font-size: 16px; */
    font-size: 18px;
  }

  .login_full.customer--root [data-item=button]>* {
    font-size: 18px;
    /* height: 35px; */
    height: 45px;
    line-height: 36px;
    padding: 0 35px;
    margin: 5px;
  }
  .signup_sec {
    margin: 30px auto;
    display: block;
    position: absolute;
    bottom: -83px;
    width: 100%;
    text-align: center;
    padding: 0 !important;
}

  /* .signup_sec {
      position: initial;
    flex-direction: column;
    align-items: center;
  } */
  a.account--register {
    border: 0;
    text-decoration: underline;
  }
  span.not_regis {
    font-size: 18px;
    font-weight: 500;
    margin-right: 5px;
  }

  span.title_c {
    font-size: 18px;
  }

  .sign_ocial_inner {
    padding-top: 12px;
    display: flex;
  }

  .sign_ocial_inner {
    width: 100%;
  }

  .login_full.customer--root {
    padding: 30px 0 65px;
  }
  .account--sign-in {
    width: auto;
}
  /* end log in css */
  /* start sign up css */
  div#shopify-section-template--15684597514416__main .register_full {
    background-size: cover;
    background-position: center;
    padding: 30px 0;
  }

  .register_full .customer--wrapper {
    background-color: transparent;
  }

  .register_wrap_inner {
    width: 100%;
  }

  .regis_frm_inner {
    display: flex;
    gap: 2%;
  }

  .register_right {
    display: none;
  }

  .register_left {
    width: 100%;
    padding: 0px 9px 40px;
  }

  .template--customers--register .customer--wrapper h1 {
    text-align: left;
    font-size: 25px;
    padding: 10px 0 27px;
  }

  #customer-register input {
    border: 1px solid #d7d7d7;
    padding: 20px 13px;
    font-size: 16px;
  }

  input#first_name::placeholder,
  input#last_name::placeholder,
  input#email::placeholder,
  input#create_password::placeholder {
    font-size: 16px;
  }

  .template--customers--register .register_full .account--button-container .account--create button {
    font-size: 18px;
    height: 45px;
    justify-content: center;
  }

  form#create_customer {
    margin-bottom: 13px;
    padding: 0 6px;
  }

  .register_full .account--button-container .account--create button {
    height: 35px;
  }
  #shopify-section-template--15684597514416__main span.not_regis {
    margin-left: -10px;
    padding: 0;
}
  .register_left span.not_regis,
  .account--button-container {
    padding: 0 6px;
  }

  /* end sign up css */
}

@media screen and (min-width:768px) and (max-width:1120px) {

  /* start log in css */
  .login_full .customer--wrapper {
    background-color: transparent;
  }

  .login_right {
    display: none;
  }

  .login_wrap_new {
    width: 100%;
    /* background: transparent; */
    padding: 0 4%;
  }

  input#customer_email,
  input#customer_password {
    width: 100%;
  }

  /* end log in css */
  /* start sign up css */
  .register_full .customer--wrapper {
    background-color: transparent;
  }

  .register_wrap_inner {
    width: 100%;
  }

  .register_right {
    display: none;
  }
  .Left_regist_frm, .right_regis_frm {
    width: 50%;


